<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyDoggyDetails.Pages.DoggiesPage"
             xmlns:viewmodels="clr-namespace:MyDoggyDetails.ViewModels" 
             Title="My Doggies"
             Appearing="ContentPage_Appearing">

    <ContentPage.BindingContext>
        <viewmodels:DoggiesViewmodel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20" VerticalOptions="StartAndExpand">


            <ImageButton Source="schnauzer.png"
                HeightRequest="100" HorizontalOptions="Center" VerticalOptions="Start" />


            <Label Text="My Doggies:" />
            <ListView  ItemsSource="{Binding Doggies}"  SelectionMode="Single"  SelectedItem="{Binding SelectedDoggy}"  HeightRequest="150" >
                
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="200" />

                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="60" />
                                </Grid.ColumnDefinitions>

                                <Label Text="{Binding Id}" Grid.Column="0" />
                                <Image Grid.Column="1" Grid.RowSpan="2" VerticalOptions="Start"
                                   Source="dog_icon_128.png"    Aspect="AspectFill"  HeightRequest="30"  WidthRequest="30" />

                                <Label Grid.Column="2" Text="{Binding GivenName}" FontSize="Medium" FontAttributes="Bold"/>
                                <Label Grid.Column="3" Text="{Binding FormattedAgeShort}" FontAttributes="Italic"   />

                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>



            <ImageButton Source="add_new_dog_icon_128.png" WidthRequest="45" HeightRequest="45" HorizontalOptions="End"
                         Command="{Binding GoToDogDetailsPageCommand}" CommandParameter="{Binding SelectedDoggy.Id}"/>




            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" >
                <StackLayout Orientation="Vertical">
                    
                    <Picker x:Name="picker"
                    Title="Choose a doggy" ItemsSource="{Binding Doggies}" 
                    SelectedItem="{Binding SelectedDoggy}"
                    ItemDisplayBinding="{Binding GivenName}"
                     FontSize="Large" />
                </StackLayout>
                <StackLayout Orientation="Vertical">
                    <Label Text="Date of Birth" />
                    <DatePicker x:Name="DogDob" Date="{Binding SelectedDoggy.DateOfBirth, Mode=TwoWay}" FontSize="Large" 
                                HorizontalOptions="Center" />
                </StackLayout>
                <ImageButton Source="edit.png" WidthRequest="30" HeightRequest="30" 
                             Command="{Binding GoToDogDetailsPageCommand}" 
                             CommandParameter="{Binding SelectedDoggy.Id}"/>


            </StackLayout>

            <Label Text="{Binding SelectedDoggy.Sex}" FontSize="Large" HorizontalOptions="Start"/>

            <StackLayout Orientation="Vertical">

                <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                    <Label Text="{Binding TotalDogDays}" FontSize="Small" HorizontalOptions="End" />
                    <Label Text=" days" FontSize="Small" HorizontalOptions="End" />
                </StackLayout>

                <Label Text="{Binding FormattedAge}" FontSize="Medium" HorizontalOptions="CenterAndExpand" />
                <Label Text="approximately" FontSize="Micro" HorizontalOptions="End" />


            </StackLayout>

        </VerticalStackLayout>

    </ScrollView>
</ContentPage>