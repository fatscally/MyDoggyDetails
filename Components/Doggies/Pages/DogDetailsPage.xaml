<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyDoggyDetails.Pages.DogDetailsPage"
             xmlns:viewmodels="clr-namespace:MyDoggyDetails.ViewModels"
             Title="DogDetailsPage">

    <ContentPage.BindingContext>
        <viewmodels:DoggiesViewmodel/>
    </ContentPage.BindingContext>
    
    
    <VerticalStackLayout>
        <Label Text="Name:"/>
        <Entry Text="{Binding SelectedDoggy.GivenName}" FontSize="Large" TextChanged="Entry_TextChanged" />
        <Label Text="ChipNumber:"/>
        <Entry Text="{Binding SelectedDoggy.ChipNumber}" FontSize="Large" TextChanged="Entry_TextChanged"/>
        <Label Text="Breed:"/>
        <Picker ItemsSource="{Binding Breeds.Name}" SelectedItem="{Binding SelectedDoggy.}" FontSize="Large" TextChanged="Entry_TextChanged"/>
        <Label Text="Colour:"/>
        <Entry Text="{Binding SelectedDoggy.Colour}" FontSize="Large" TextChanged="Entry_TextChanged"/>
        <Label Text="DateOfBirth:"/>
        <Entry Text="{Binding SelectedDoggy.DateOfBirth}" FontSize="Large" TextChanged="Entry_TextChanged"/>
        <Label Text="Gender:"/>
        <Entry Text="{Binding SelectedDoggy.Sex}" FontSize="Large" TextChanged="Entry_TextChanged"/>

        <Button Text="Save" Command="{Binding SaveDogDetailsCommand}"/>

    </VerticalStackLayout>
</ContentPage>